<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa Truyện"
                android:fontFamily="@font/lobster"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                />

            <ImageButton
                android:id="@+id/imgUpdateStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/update_icon"
                android:layout_gravity="right"
                android:padding="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login"
            android:gravity="center">
            >

            <ImageView
                android:id="@+id/imageStory"
                android:layout_width="180dp"
                android:layout_height="260dp"
                android:contentDescription="image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/titleStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title default"
                android:fontFamily="@font/lobster"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lobster"
                android:text="Author"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="20dp"
                android:textStyle="italic" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                   <TextView
                       android:id="@+id/textDescription"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Description"
                       android:fontFamily="@font/lobster"
                       android:textAppearance="?attr/textAppearanceHeadline6"
                       android:textStyle="italic"
                       />

            </ScrollView>

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CategoryId : 12345678"
                android:textSize="18dp"
                android:fontFamily="@font/lobster"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/textType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story Type "
                android:fontFamily="@font/lobster"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="8dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/lobster"
                   android:text="Trạng thái :"
                   android:textAppearance="?attr/textAppearanceBody2"
                   android:textColor="?android:attr/textColorSecondary"
                   android:textSize="20dp"
                   android:textStyle="italic"
                   />

               <Spinner
                   android:id="@+id/spinnerIsDelete"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:entries="@array/is_delete"
                   android:gravity="center"
                   android:layout_marginLeft="10dp"
                   />

           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>