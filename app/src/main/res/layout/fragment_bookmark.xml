<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.BookmarkFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/background_login"
            >
            <TextView
                android:id="@+id/txtChapterReaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/lobster"
                android:text="Bạn chưa đánh dấu chương  nào.!!"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txtChapterReadContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/lobster"
                android:text="Ấn vào chương để đọc tiếp"
                android:visibility="invisible"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            />



    </LinearLayout>

</FrameLayout>